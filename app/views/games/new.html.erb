<div class="m-3">
<h1 class="text-center">NEW GAME</h1>
<ul class="list-inline d-flex">
  <% @letters.each do |letter|%>
  <li class="p-3 px-4 m-3 border border-dark border-3 rounded fw-bold"><%=letter%></li>
  <%end%>
</ul>

<p class="text-center">What is the longest word you can find?</p>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" class="form-label">
  <input type="submit" value="Play" class="btn btn-dark">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
</div>
